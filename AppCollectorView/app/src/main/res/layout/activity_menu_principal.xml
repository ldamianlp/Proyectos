<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gadma.gob.ec.appcollectorview.MenuPrincipal">
    <ScrollView android:id="@+id/login_form_imagenes" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout android:id="@+id/email_login_form" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center">
                <TextView android:id="@+id/lblUserConnect" android:text="Bienvenido: " android:layout_width="wrap_content"
                    android:textSize="24dp"
                    android:layout_height="wrap_content"  android:gravity="right"
                    tools:ignore="HardcodedText,NestedWeights,RtlHardcoded" />
                <EditText
                    android:id="@+id/txtUsuarioConnect"
                    android:enabled="false"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  android:gravity="right"
                    tools:ignore="HardcodedText,NestedWeights,RtlHardcoded"
                    />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="120dp" android:layout_weight="1" android:gravity="center">
                <LinearLayout
                    android:id="@+id/btnConsultas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_default"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ivConsultas" android:layout_width="100dp"
                        android:layout_height="100dp" android:text="Consulta / Carga imagenes"
                        android:background="@mipmap/consultar"
                        android:gravity="center" tools:ignore="LabelFor,NestedWeights,RtlHardcoded" /> />

                    <TextView
                        android:id="@+id/lblBtnConsultar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:text="Consulta  /  Carga imagenes" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="120dp" android:layout_weight="1" android:gravity="center">
                <LinearLayout
                    android:id="@+id/btnMigrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_default"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ivMigrar" android:layout_width="100dp"
                        android:layout_height="100dp" android:text="Syncronizar informaciÃ³n"
                        android:background="@mipmap/syncro"
                        android:gravity="center" tools:ignore="LabelFor,NestedWeights,RtlHardcoded" />

                    <TextView
                        android:id="@+id/lblBtnMigrar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:text="Syncronizar datos al servidor." />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="120dp" android:layout_weight="1" android:gravity="center">
                <LinearLayout
                    android:id="@+id/btnSalirApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_default"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ivSalirApp" android:layout_width="100dp"
                        android:layout_height="100dp" android:text="Salir"
                        android:background="@mipmap/salir"
                        android:gravity="center" tools:ignore="LabelFor,NestedWeights,RtlHardcoded" />

                    <TextView
                        android:id="@+id/lblBtnSalirApp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:text="Salir..  " />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>